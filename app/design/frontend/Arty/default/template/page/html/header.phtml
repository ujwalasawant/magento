<script>
    jQuery(document).ready(function () {
        var elementPosition = jQuery('#header').offset();


        if (jQuery(window).width() > 1024 && jQuery(window).height() >= 200) {
            jQuery(window).scroll(function () {
                if (jQuery(window).scrollTop() > elementPosition.top) {
                    jQuery('#header-search').addClass('header-searchwidthf').show();
                    jQuery('#header-search').removeClass('header-searchwidth').show();
                    jQuery('#header').addClass('fixed').show();
                    jQuery('#iconS').addClass('Smallicon').show();
                    jQuery('#logo').addClass('logoSmaller').show();
                    // jQuery('#nav').addClass('fix').show();
                     jQuery('#header-nav').addClass('fix').show();

                    jQuery('#imgheaderf').removeClass('hidden').addClass('show');
                }
                else {
                    jQuery('#header').removeClass('fixed');
                    //  jQuery('#nav').removeClass('fix').show();
                    jQuery('#logo').removeClass('logoSmaller').show();
                    jQuery('#header-search').removeClass('header-searchwidthf');
                    jQuery('#header-search').addClass('header-searchwidth');
                    jQuery('#iconS').removeClass('Smallicon').show();
                    jQuery('#header-nav').removeClass('fix').show();


                }
            });
        }
        else {

            jQuery('#header').removeClass('fixed');
            jQuery('#header-nav').removeClass('fix').show();
        }

    });
</script>

