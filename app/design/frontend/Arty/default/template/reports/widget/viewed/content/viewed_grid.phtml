<style>
    .carousel-control {
        padding-top:10%;
        width:5%;
    }
</style>

<?php if ($_products = $this->getRecentlyViewedProducts()): ?>

        <div>
            <h2><?php echo $this->__('Recently Viewed') ?></h2>
        </div>


<?php endif; ?>

<div class="container" >
    <div class="col-md-12" >

        <div class="well"    >
            <div id="myCarousel" class="carousel slide" >
                <!-- Carousel items -->
                <div class="carousel-inner">
                    <?php $i=0; foreach ($_products as $_product): ?>
                        <?php if($i%4==0 ):   ?>
                            <div class="item <?php if($i==0) { echo 'active'; } ?>">
                            <div class="row">
                        <?php endif; ?>

                        <?php  if($i%4==0 ){ $j=1; } ?>
                        <div class="col-sm-3  ">
                            <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>">
                                <img class="img-responsive lightborder" src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(100)?>" width="180" alt="<?php echo $this->stripTags($_product->getName(), null, true) ?>" />
                            </a>
                        </div>
                        <?php $j++;?>

                        <?php if($j==5): ?>
                            </div>
                            <!--/row-->
                            </div>
                        <?php endif; ?>
                        <a class="left carousel-control" style="color: black;" href="#myCarousel" data-slide="prev"></a>
                        <a class="right carousel-control" style="color: black;" href="#myCarousel" data-slide="next"></a>

                    <?php $i++; endforeach;  ?>

                    <!--/item-->
                </div>
                <!--/carousel-inner-->

            </div>
            <!--/myCarousel-->
        </div>
        <!--/well-->
    </div>
</div>
<script>
    $(document).ready(function() {
        $('#myCarousel').carousel({
            interval: 10000
        })

        $('#myCarousel').on('slid.bs.carousel', function() {
