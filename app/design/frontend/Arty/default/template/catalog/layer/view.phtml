/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>


<button class="filter-arrow"  onclick="showAttribute()"><?php echo $this->__('Filter') ?></button>
<?php if($this->canShowBlock()): ?>
    <div class="block-layered-nav " style="display: none;">
     <dl id="narrow-by-list">

         <?php $_filters = $this->getFilters() ?>
         <?php foreach ($_filters as $_filter):
             if($_filter->getItemsCount()):
                 switch($filtermode){
                     case 2:
                         //enable selected filters
                         if (in_array($_filter->getAttributeModel()->getAttributeId(), $filtersselected)) {
                          //   echo "<dt>". $this->__($_filter->getName()) ."</dt>";
                             echo "<dd class='filter-arrow' style='margin-top: 20px;'>". $_filter->getHtml() ."</dd>";
                         }
                         break;
                     case 3:
                         //disable selected filters
                         if (!in_array($_filter->getAttributeModel()->getAttributeId(), $filtersselected)) {
                           //  echo "<dt>". $this->__($_filter->getName()) ."</dt>";
                             echo "<dd class='filter-arrow'>". $_filter->getHtml() ."</dd>";
                         }
                         break;
                     default:
                         //disabled. show all.
                       //  echo  "<dt>". $this->__($_filter->getName()) ."</dt>";
                         echo "<dd class='filter-arrow'>". $_filter->getHtml() ."</dd>";
                 }
             endif;
         endforeach; ?>
                </dl>
        <script type="text/javascript">decorateDataList('narrow-by-list')</script>

    </div>
<?php endif; ?>


<script type="text/javascript">
    //<![CDATA[

    <?php foreach ($_filters as $_filter): ?>

   var _used_filter = push('<?php echo $_filter->getRequestVar() ?>');
    <?php endforeach; ?>

    function showAttribute()
    {
        if(jQuery(".block-layered-nav").is(":visible"))
            jQuery(".block-layered-nav").hide();
        else
            jQuery(".block-layered-nav").show();
    }
    //]]>
</script>
