<?xml version="1.0" encoding="UTF-8"?>
<layout>

    <default>

        <reference name="head">
            
            <action method="addItem" ifconfig="magehit/config/enabled">

                <type>skin_css</type>

                <name>magehit_sociallogin/css/styles.css</name>

            </action>

        </reference>
    
    </default>
    
    
    <customer_account_login>
    


    </customer_account_login>
    
    <customer_account_create>        

        <reference name="content">

            <block type="sociallogin/logindefault" before="customer_form_register" name="magehit_sociallogin_html"></block>

        </reference>        

    </customer_account_create>
    
    <checkout_onepage_index>

        <reference name="content">

            <block type="sociallogin/logindefault" name="magehit_sociallogin_html"></block>

        </reference>

    </checkout_onepage_index>

    <customer_account>



    </customer_account>



    <magehit_sociallogin_account_google translate="label">

        <label>Customer My Account Google SocialLogin</label>

        <update handle="customer_account"/>

        <reference name="head">

            <action method="setTitle" translate="title" module="sociallogin">

                <title>Google SocialLogin</title>

            </action>

            <action method="addItem">

                <type>skin_css</type>

                <name>magehit_sociallogin/css/styles.css</name>

            </action>

        </reference>

        <reference name="my.account.wrapper">

            <block type="sociallogin/google_account" name="magehit_sociallogin_google_account">

                <block type="sociallogin/google_button" name="magehit_sociallogin_account_google_button" />

            </block>

        </reference>

        <reference name="customer_account_navigation">

            <action method="setActive" module="sociallogin">

                <path>mhsociallogin/account/google</path>

            </action>

        </reference>

    </magehit_sociallogin_account_google>



