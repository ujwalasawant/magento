<?xml version="1.0"?>
<config>
    <global>
        <udropship>
            <vendor>
                <!-- If you want to create a new field group, use fieldset (optional): -->
                <fieldsets>
                    <my_fieldset>
                        <legend>My Fieldset</legend>
                        <position>100</position>
                    </my_fieldset>
                </fieldsets>

                <fields>
                    <!-- Text field, named 'my_text_field' -->
                    <my_text_field>
                        <!-- text label for the field, will be shown to admin and vendor -->
                        <label>New Order Carbon Copy Emails</label>
                        <!-- Fieldset to show the field in, see udropship config.xml for default ones -->
                        <fieldset>my_fieldset</fieldset>
                        <!-- Position within the fieldset -->
                        <position>5</position>
                        <!-- Default value for the field -->
                        <default><![CDATA[Default text]]></default>
                        <!-- <note> is optional, use for comments on the field for admin and vendor -->
                        <note>Comma separated</note>
                    </my_text_field>


                    <bank_account_no>
                        <!-- text label for the field, will be shown to admin and vendor -->
                        <label>Bank Account Number</label>
                        <!-- Fieldset to show the field in, see udropship config.xml for default ones -->
                        <fieldset>integration</fieldset>

                        <reg_class>validate-alphanum</reg_class>
                        <!-- Position within the fieldset -->
                        <position>11</position>
                        <!-- Default value for the field -->
                        <default><![CDATA[]]></default>
                        <!-- <note> is optional, use for comments on the field for admin and vendor -->
                        <note>Comma separated</note>
                    </bank_account_no>

                    <confirm_bank_account_no>
                        <!-- text label for the field, will be shown to admin and vendor -->
                        <label>Confirm Bank Account Number</label>
                        <!-- Fieldset to show the field in, see udropship config.xml for default ones -->
                        <fieldset>integration</fieldset>

                        <!-- Position within the fieldset -->
                        <position>13</position>
                        <!-- Default value for the field -->
                        <default><![CDATA[]]></default>
                        <!-- <note> is optional, use for comments on the field for admin and vendor -->
                        <note>Comma separated</note>
                    </confirm_bank_account_no>

                    <bank_branch>
                        <!-- text label for the field, will be shown to admin and vendor -->
                        <label>Bank branch address</label>
                        <!-- Fieldset to show the field in, see udropship config.xml for default ones -->
                        <fieldset>integration</fieldset>
                        <!-- Position within the fieldset -->
                        <position>14</position>
                        <!-- Default value for the field -->
                        <default><![CDATA[]]></default>
                        <!-- <note> is optional, use for comments on the field for admin and vendor -->
                        <note>Comma separated</note>
                    </bank_branch>

                    <VAT>
                        <!-- text label for the field, will be shown to admin and vendor -->
                        <label>Vat/TIN</label>
                        <!-- Fieldset to show the field in, see udropship config.xml for default ones -->
                        <fieldset>integration</fieldset>
                        <!-- Position within the fieldset -->
                        <reg_class>validate-alphanum</reg_class>
                        <position>15</position>
                        <!-- Default value for the field -->
                        <default><![CDATA[]]></default>
                        <!-- <note> is optional, use for comments on the field for admin and vendor -->
                        <note>Comma separated</note>
                    </VAT>

                    <bank_cheque>
                        <!-- text label for the field, will be shown to admin and vendor -->
                        <label>Cheque on Behalf</label>
                        <!-- Fieldset to show the field in, see udropship config.xml for default ones -->
                        <fieldset>integration</fieldset>

                        <!-- Position within the fieldset -->
                        <position>16</position>
                        <!-- Default value for the field -->
                        <default><![CDATA[]]></default>
                        <!-- <note> is optional, use for comments on the field for admin and vendor -->
                        <note>Comma separated</note>
                    </bank_cheque>

                    <bank_IFSC>
                        <!-- text label for the field, will be shown to admin and vendor -->
                        <label>IFSC code</label>
                        <!-- Fieldset to show the field in, see udropship config.xml for default ones -->
                        <fieldset>integration</fieldset>
                        <reg_class>validate-alphanum</reg_class>
                        <!-- Position within the fieldset -->
                        <position>17</position>
                        <!-- Default value for the field -->
                        <default><![CDATA[]]></default>
                        <!-- <note> is optional, use for comments on the field for admin and vendor -->
                        <note>Comma separated</note>
                    </bank_IFSC>

                    <company_name>
                        <!-- text label for the field, will be shown to admin and vendor -->
                        <label>Company Name</label>
                        <!-- Fieldset to show the field in, see udropship config.xml for default ones -->
                        <fieldset>integration</fieldset>
                        <!-- Position within the fieldset -->
                        <position>18</position>
                        <!-- Default value for the field -->
                        <default><![CDATA[]]></default>
                        <!-- <note> is optional, use for comments on the field for admin and vendor -->
                        <note>Comma separated</note>
                    </company_name>

                    <PAN>
                        <!-- text label for the field, will be shown to admin and vendor -->
                        <label>PAN no</label>
                        <!-- Fieldset to show the field in, see udropship config.xml for default ones -->
                        <fieldset>integration</fieldset>
                        <reg_class>validate-alphanum</reg_class>
                        <!-- Position within the fieldset -->
                        <position>19</position>
                        <!-- Default value for the field -->
                        <default><![CDATA[]]></default>
                        <!-- <note> is optional, use for comments on the field for admin and vendor -->
                        <note>Comma separated</note>
                    </PAN>

                    <propic>
                        <label>profile pic</label>
                        <type>image</type>
                        <fieldset>integration</fieldset>
                        <position>99</position>
                    </propic>

                    <Banner>
                        <label>Banner</label>
                        <type>image</type>
                        <fieldset>integration</fieldset>
                        <position>98</position>
                    </Banner>

                    <PanCard>
                        <label>Pancard Image</label>
                        <type>image</type>
                        <fieldset>integration</fieldset>
                        <position>97</position>
                    </PanCard>

                    <AddrsPrf>
                        <label>Address Proof Image</label>
                        <type>image</type>
                        <fieldset>integration</fieldset>
                        <position>96</position>
                    </AddrsPrf>

                    <CancelCheque>
                        <label>CancelCheque</label>
                        <type>image</type>
                        <fieldset>integration</fieldset>
                        <position>95</position>
                    </CancelCheque>

                    <!-- Dropdown field -->
                    <my_country_field>
                        <label>3rd Party Country</label>
                        <fieldset>my_fieldset</fieldset>
                        <type>select</type>
                        <source_model>adminhtml/system_config_source_country</source_model>
                        <position>5</position>
                    </my_country_field>

                    <my_dropdown_field>
                        <label>My Yes/No Dropdown vendor</label>
                        <type>select</type>
                        <fieldset>my_fieldset</fieldset>
                        <!-- Source for the 'switch' within the class file -->
                        <source>yesno</source>
                        <position>3</position>
                        <!-- Default value for the field -->
                        <default>0</default>
                    </my_dropdown_field>

                    <aboutMe>
                        <label>About Me</label>
                        <fieldset>integration</fieldset>
                        <type>textarea</type>
                        <position>10</position>
                    </aboutMe>

                    <academics>
                        <label>Academics</label>
                        <fieldset>integration</fieldset>
                        <type>textarea</type>
                        <position>11</position>
                    </academics>

                    <Exhibitions>
                        <label>Exhibitions</label>
                        <fieldset>integration</fieldset>
                        <type>textarea</type>
                        <position>12</position>
                    </Exhibitions>

                    <Awards>
                        <label>Awards and Recognitions</label>
                        <fieldset>integration</fieldset>
                        <type>textarea</type>
                        <position>13</position>
                    </Awards>

                </fields>
            </vendor>
        </udropship>
    </global>
</config>

